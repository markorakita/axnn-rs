<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="16dp"
	tools:context="com.github.markorakita.axnn.MainActivity">

	<TextView
		android:id="@+id/homeScreenText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/home_screen_text"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="32dp"
		android:textSize="18sp" />

	<Button
		android:id="@+id/testRsBtn"
		android:layout_width="160dp"
		android:layout_height="wrap_content"
		android:text="@string/test_btn_text"
		android:textAllCaps="false"
		android:layout_below="@+id/homeScreenText"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="32dp" />

	<Button
		android:id="@+id/benchRsBtn"
		android:layout_width="160dp"
		android:layout_height="wrap_content"
		android:text="@string/benchmark_btn_text"
		android:textAllCaps="false"
		android:layout_below="@+id/testRsBtn"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="16dp" />

	<Spinner
		android:id="@+id/layerChoice"
		android:layout_width="180dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/benchRsBtn"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="24dp" />

	<TextView
		android:id="@+id/resultText"
		android:visibility="gone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layerChoice"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="64dp"
		android:textSize="16sp" />

	<ProgressBar
		android:id="@+id/progressBar"
		android:visibility="gone"
		android:indeterminate="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/layerChoice"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="64dp"
		style="@android:style/Widget.ProgressBar.Large" />
</RelativeLayout>
